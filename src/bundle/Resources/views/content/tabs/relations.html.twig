{% trans_default_domain "locationview" %}

<div class="ez-list-toolbar">
    <h2 class="ez-list-toolbar-label">{{ 'locationview.relations.related.content'|trans()|desc('Related content - other content items used by this content.') }}</h2>
</div>

{% if relations %}
    {{ include('@EzSystemsHybridPlatformUi/content/tabs/relations/table.html.twig', {'relationList': relations}) }}
{% else %}
    <p class="ez-relations-box-list-no-content">
        {{ 'locationview.relations.no.related.content'|trans()|desc('This content has no related content.') }}
    </p>
{% endif %}

<div class="ez-list-toolbar">
    <h2 class="ez-list-toolbar-label">{{ 'locationview.relations.reverse.relations'|trans()|desc('Reverse relations - content items using this content.') }}</h2>
</div>

{% if reverseRelations %}
    {{ include('@EzSystemsHybridPlatformUi/content/tabs/relations/table.html.twig', {'relationList': reverseRelations}) }}
{% else %}
    <p class="ez-relations-box-list-no-content">
        {{ 'locationview.relations.no.reverse.related.content'|trans()|desc('This content is not used by any other content.') }}
    </p>
{% endif %}
